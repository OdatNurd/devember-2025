{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-svelte-plugin"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ]
}
